<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns="http://symfony.com/schema/routing" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">
  
  <route id="teamraceHome" pattern="/{_locale}/teamrace/{idTeamrace}">
    <default key="_controller">TeamRaceWebBundle:Teamrace:home</default>
    <requirement key="_locale">en|de</requirement>
  </route>
  
  <!-- CHALLENGES -->
  
  <route id="teamraceChallenges" pattern="/{_locale}/teamrace/{idTeamrace}/challenges">
    <default key="_controller">TeamRaceWebBundle:Teamrace:challenges</default>
    <requirement key="_locale">en|de</requirement>
  </route>
  
  <route id="teamraceCreateChallenge" pattern="/{_locale}/teamrace/{idTeamrace}/challenges/create">
    <default key="_controller">TeamRaceWebBundle:Teamrace:createChallenge</default>
    <requirement key="_locale">en|de</requirement>
  </route>
  
  <route id="teamraceChallengeSetResults" pattern="/{_locale}/teamrace/{idTeamrace}/challenge/{idChallenge}/setResults">
    <default key="_controller">TeamRaceWebBundle:Teamrace:challengeSetResults</default>
    <requirement key="_locale">en|de</requirement>
  </route> 
  
  <route id="teamraceChallengeViewResults" pattern="/{_locale}/teamrace/{idTeamrace}/challenge/{idChallenge}/viewResults">
    <default key="_controller">TeamRaceWebBundle:Teamrace:challengeViewResults</default>
    <requirement key="_locale">en|de</requirement>
  </route> 
  
  <!-- MEMBERS -->
  
  <route id="teamraceMembers" pattern="/{_locale}/teamrace/{idTeamrace}/members">
    <default key="_controller">TeamRaceWebBundle:Teamrace:members</default>
    <requirement key="_locale">en|de</requirement>
  </route>
  
  <route id="teamraceAddMember" pattern="/{_locale}/teamrace/{idTeamrace}/members/add">
    <default key="_controller">TeamRaceWebBundle:Teamrace:addMember</default>
    <requirement key="_locale">en|de</requirement>
  </route>
  
  <route id="teamraceDoAddMember" pattern="/{_locale}/teamrace/{idTeamrace}/members/doAdd">
    <default key="_controller">TeamRaceWebBundle:Teamrace:doAddMember</default>
    <requirement key="_locale">en|de</requirement>
  </route>
  
  <route id="teamraceRemoveMember" pattern="/{_locale}/teamrace/{idTeamrace}/members/remove/{idUser}">
    <default key="_controller">TeamRaceWebBundle:Teamrace:removeMember</default>
    <requirement key="_locale">en|de</requirement>
  </route>
  

  
  <!-- TEAMS -->
    
  <route id="teamraceTeams" pattern="/{_locale}/teamrace/{idTeamrace}/teams">
    <default key="_controller">TeamRaceWebBundle:Teamrace:teams</default>
    <requirement key="_locale">en|de</requirement>
  </route>
  
  <route id="teamraceRemoveTeam" pattern="/{_locale}/teamrace/{idTeamrace}/teams/remove/{idTeam}">
    <default key="_controller">TeamRaceWebBundle:Teamrace:removeTeam</default>
    <requirement key="_locale">en|de</requirement>
  </route>
  
  <route id="teamraceAddMemberToTeam" pattern="/{_locale}/teamrace/{idTeamrace}/teams/addMember/{idUser}">
    <default key="_controller">TeamRaceWebBundle:Teamrace:addMemberToTeam</default>
    <requirement key="_locale">en|de</requirement>
  </route>
  
  <route id="teamraceRemoveMemberFromTeam" pattern="/{_locale}/teamrace/{idTeamrace}/members/removeFromTeam/{idUser}/{idTeam}">
    <default key="_controller">TeamRaceWebBundle:Teamrace:removeMemberFromTeam</default>
    <requirement key="_locale">en|de</requirement>
  </route>    
  
  
  
  <!-- STANDINGS -->
  
  <route id="teamraceStandings" pattern="/{_locale}/teamrace/{idTeamrace}/standings">
    <default key="_controller">TeamRaceWebBundle:Teamrace:standings</default>
    <requirement key="_locale">en|de</requirement>
  </route>
  

</routes>
