{% extends 'TeamRaceWebBundle:External:_layout.html.twig' %}

{% block content %}
	
	{% if error %}
	    <div>{{ error.message }}</div>
	{% endif %}
	<br>
	<form action="{{ path('loginCheck') }}" method="post">
	<table cellpadding="0" cellspacing="0" border="0">
		<tr>
			<td><label for="username">E-mail address:</label>&nbsp;</td>
			<td><input type="text" id="username" name="_username" value="{{ last_username }}" /></td>
		</tr>
		<tr>
			<td><label for="password">Password:</label></td>
			<td><input type="password" id="password" name="_password" /></td>
		</tr>
	</table>
	<button type="submit">login</button>
	</form>

{% endblock %}